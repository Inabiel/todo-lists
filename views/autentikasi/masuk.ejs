<%- contentFor('body')%>
<div class="container d-flex h-100" style="min-height: 88vh">
  <div
    class="row justify-content-center align-self-center w-75 p-5 mx-auto bg-secondary rounded-3"
  >
    <h2 class="text-light text-center">Laman Masuk</h2>
    <form method="POST" , action="/auth/signin">
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label text-light"
          >Alamat Email</label
        >
        <input type="email" name="email" class="form-control" />
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label text-light"
          >Password</label
        >
        <input type="password" class="form-control" name="password" />
      </div>
      <button type="submit" class="btn btn-primary">Daftar</button>
      <h5 class="text-light mt-2">
        Belum punya akun? <a href="/auth/signup">Daftar</a> disini!
      </h5>
    </form>
  </div>
</div>
